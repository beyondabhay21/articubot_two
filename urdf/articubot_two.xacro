<?xml version="1.0"?>
<robot name="articubot_two" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find articubot_two_description)/urdf/materials.xacro"/>
  <xacro:include filename="$(find articubot_two_description)/urdf/articubot_two.trans"/>
  <xacro:include filename="$(find articubot_two_description)/urdf/articubot_two.gazebo"/>

  <!-- BASE LINK -->
  <link name="base_link">
    <inertial>
      <origin xyz="0.002232 0.002232 0.063" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.004" iyy="0.008" izz="0.010" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- LEFT WHEEL -->
  <link name="left_wheel_1">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00003" iyy="0.00005" izz="0.00003" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="-0.002232 -0.102232 -0.035" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/left_wheel_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="-0.002232 -0.102232 -0.035" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/left_wheel_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- RIGHT WHEEL -->
  <link name="right_wheel_1">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00003" iyy="0.00005" izz="0.00003" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="-0.002232 0.097768 -0.035" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/right_wheel_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="-0.002232 0.097768 -0.035" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/right_wheel_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- LIDAR LINK -->
  <link name="lidar_joint_1">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.000010" iyy="0.000010" izz="0.000018" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.057768 -0.002232 -0.136" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/lidar_joint_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0.057768 -0.002232 -0.136" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/lidar_joint_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- CAMERA LINK -->
  <link name="camera_joint_1">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="2e-06" iyy="1e-06" izz="1e-06" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="-0.164232 -0.002232 -0.053" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/camera_joint_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="-0.164232 -0.002232 -0.053" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find articubot_two_description)/meshes/camera_joint_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- JOINTS -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.002232 0.102232 0.035" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel_1"/>
    <axis xyz="0.0 1.0 0.0"/>
    <dynamics damping="0.01" friction="0.01"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.002232 -0.097768 0.035" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel_1"/>
    <axis xyz="0.0 1.0 0.0"/>
    <dynamics damping="0.01" friction="0.01"/>
  </joint>

  <joint name="lidar_joint" type="fixed">
    <origin xyz="-0.057768 0.002232 0.136" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_joint_1"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.164232 0.002232 0.053" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera_joint_1"/>
  </joint>

  <!-- ROS2 CONTROL -->
  <ros2_control name="ArticubotSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

</robot>
